{
    "manifestVersion": 1,
    "id": "vsts-git-build-tasks",
    "name": "Git Build Tools",
    "version": "1.0.0",
    "publisher": "ioz",
    "public": true,
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Tasks for interacting with Git repositories.",
    "categories": [
        "Build and release"
    ],
    "icons": {
        "default": "extension-icon.png"        
    },
    "files": [
        {
            "path": "_build/Tasks/EnableGitRemoteAccess"
        },
        {
            "path": "_build/Tasks/RestoreGitRemote"
        }
    ],
    "content": {
        "details":
        {
            "path": "extension-details.md"
        }
    },    
    "contributions": [
        {
            "id": "enable-git-remote-access",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "_build/Tasks/EnableGitRemoteAccess"
            }
        },
        {
            "id": "restore-git-remote",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "_build/Tasks/RestoreGitRemote"
            }
        }
    ],
    "links": {
        "home": {
            "uri": "http://ioz.ch"
        },
        "getstarted": {
            "uri": "https://github.com/iozag/vsts-git-tasks/wiki"
        },
        "issues": {
            "uri": "https://github.com/iozag/vsts-git-tasks/issues"
        },
        "license": {
            "uri": "https://github.com/iozag/vsts-git-tasks/blob/master/LICENSE"
        },
        "repository": {
            "uri": "https://github.com/iozag/vsts-git-tasks"
        }
    }    
}