{
    "id":"ad5ee7de-41ec-42c8-84d0-8359bc39a4f5",
    "name":"EnableGitRemoteAccess",
    "friendlyName": "Enable Git Remote Access",
    "description": "Update the Git repository on the agent to allow access to the upstream repository on Visual Studio Team Service.",
    "helpMarkDown": "[More Information](https://github.com/iozag/vsts-git-tasks)",
    "category": "Utility",
    "visibility": [
                "Build"
                  ],
    "author": "IOZ AG",
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 1
    },
    "demands": [
        "msbuild",
        "visualstudio"
    ],
    "minimumAgentVersion": "1.83.0",
    "inputs": [
        {
            "name": "remoteName",
            "type": "string",
            "label": "Remote name",
            "defaultValue": "origin",
            "required": true,
            "helpMarkDown": "Name of the remote which should be updated."
        }
    ],    
    "instanceNameFormat": "Allow Git remote access",
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\EnableGitRemoteAccess.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(Build.SourcesDirectory)"
        }
    }
}
